{
  "name": "solaris-ui",
  "version": "0.1.0",
  "private": true,
  "homepage": ".",
  "repository": {
    "type": "git",
    "url": "https://github.com/solaris-protocol/solaris-ui"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "localnet:update": "solana-localnet update",
    "localnet:up": "rm client/util/store/config.json; set -x; solana-localnet down; set -e; solana-localnet up",
    "localnet:down": "solana-localnet down",
    "localnet:logs": "solana-localnet logs -f",
    "predeploy": "git pull --ff-only && yarn && yarn build",
    "deploy": "gh-pages -d build",
    "format:fix": "prettier --write \"**/*.+(js|jsx|ts|tsx|json|css|md)\""
  },
  "dependencies": {
    "@ant-design/pro-layout": "^6.7.0",
    "@ledgerhq/hw-transport-webusb": "^5.41.0",
    "@linaria/babel-preset": "^3.0.0-beta.4",
    "@linaria/core": "^3.0.0-beta.4",
    "@linaria/react": "^3.0.0-beta.4",
    "@linaria/shaker": "^3.0.0-beta.4",
    "@project-serum/serum": "^0.13.37",
    "@project-serum/sol-wallet-adapter": "^0.1.8",
    "@solana/spl-token": "0.0.11",
    "@solana/spl-token-swap": "0.0.2",
    "@solana/web3.js": "^0.86.4",
    "antd": "^4.6.6",
    "bn.js": "^5.1.3",
    "bs58": "^4.0.1",
    "buffer-layout": "^1.2.0",
    "chart.js": "^2.9.4",
    "echarts": "^4.9.0",
    "eventemitter3": "^4.0.7",
    "jazzicon": "^1.5.0",
    "lodash": "^4.17.20",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-intl": "^5.10.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@linaria/webpack-loader": "^3.0.0-beta.4",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.1.9",
    "@types/bn.js": "^4.11.6",
    "@types/bs58": "^4.0.1",
    "@types/chart.js": "^2.9.32",
    "@types/echarts": "^4.9.7",
    "@types/jest": "^24.9.1",
    "@types/ledgerhq__hw-transport": "^4.21.3",
    "@types/ledgerhq__hw-transport-webusb": "^4.70.1",
    "@types/node": "^12.12.62",
    "@types/react": "^16.9.50",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.7",
    "@welldone-software/why-did-you-render": "^6.1.4",
    "babel-loader": "8.1.0",
    "babel-preset-react-app": "^10.0.0",
    "customize-cra": "^1.0.0",
    "gh-pages": "^3.1.0",
    "husky": "^6.0.0",
    "less": "^3.11.1",
    "less-loader": "^6.1.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.1.2",
    "react-app-rewired": "^2.1.8",
    "typescript": "^4.2.4"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
